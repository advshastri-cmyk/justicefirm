{
  "id": "https://justicefirms.com/",
  "name": "The Justice Firm | Advocates & Consultants",
  "short_name": "JusticeFirms",
  "description": "Premium Legal Services and Consultancy specializing in Criminal, Family, Civil, and Constitutional Law.",
  "start_url": "./index.html?source=pwa",
  "scope": "./",
  "display": "standalone",
  "display_override": [
    "window-controls-overlay",
    "minimal-ui"
  ],
  "background_color": "#ffffff",
  "theme_color": "#1a1a1a",
  "orientation": "portrait",
  "lang": "en-US",
  "dir": "ltr",
  "categories": [
    "business",
    "government",
    "productivity"
  ],
  "prefer_related_applications": false,
  "icons": [
    { "src": "android-icon-36x36.png", "sizes": "36x36", "type": "image/png" },
    { "src": "android-icon-48x48.png", "sizes": "48x48", "type": "image/png" },
    { "src": "android-icon-72x72.png", "sizes": "72x72", "type": "image/png" },
    { "src": "android-icon-96x96.png", "sizes": "96x96", "type": "image/png" },
    { "src": "android-icon-144x144.png", "sizes": "144x144", "type": "image/png" },
    { "src": "android-icon-192x192.png", "sizes": "192x192", "type": "image/png", "purpose": "any" },
    { "src": "android-icon-192x192.png", "sizes": "192x192", "type": "image/png", "purpose": "maskable" },
    { "src": "favicon-512x512.png", "sizes": "512x512", "type": "image/png", "purpose": "any" },
    { "src": "favicon-512x512.png", "sizes": "512x512", "type": "image/png", "purpose": "maskable" }
  ],
  "shortcuts": [
    {
      "name": "Book Appointment",
      "short_name": "Book Now",
      "url": "contact.html",
      "icons": [{ "src": "android-icon-96x96.png", "sizes": "96x96" }]
    },
    {
      "name": "Legal Services",
      "short_name": "Services",
      "url": "services.html",
      "icons": [{ "src": "android-icon-96x96.png", "sizes": "96x96" }]
    }
  ],
  "screenshots": [
    {
      "src": "favicon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "narrow",
      "label": "Justice Firms Mobile View"
    },
    {
      "src": "favicon-512x512.png",
      "sizes": "512x512",
      "type": "image/png",
      "form_factor": "wide",
      "label": "Justice Firms Desktop View"
    }
  ],
  "file_handlers": [
    {
      "action": "/open-file",
      "accept": {
        "application/pdf": [".pdf"],
        "text/plain": [".txt", ".md"]
      }
    }
  ],
  "protocol_handlers": [
    {
      "protocol": "mailto",
      "url": "/compose?to=%s"
    },
    {
      "protocol": "web+justice",
      "url": "/case-handler?case=%s"
    }
  ],
  "share_target": {
    "action": "/share-receiver",
    "method": "POST",
    "enctype": "multipart/form-data",
    "params": {
      "title": "sharedTitle",
      "text": "sharedText",
      "url": "sharedUrl",
      "files": [
        {
          "name": "sharedFile",
          "accept": ["application/pdf", "image/*"]
        }
      ]
    }
  },
  "launch_handler": {
    "client_mode": "focus-existing"
  }
}
